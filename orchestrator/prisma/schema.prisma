generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Events{
  id                        String @id @default(cuid())
  eventHandleId             String 
  eventSeq                  BigInt
  eventType                 String
  eventData                 String
  eventIndex                String
  decoded_event_data        String  //JSON String
  chain                     String   @default("ROOCH-testnet")
  oracleAddress             String   @default("0x9ce8eaf2166e9a6d4e8f1d27626297a0cf5ba1eaeb31137e08cc8f7773fb83f8")

  status                    Int
  retries                   Int
  response                  String?
  indexedAt                 DateTime  @default(now())
  updateAt                  DateTime  @updatedAt

  @@index([eventHandleId, eventSeq,chain, oracleAddress])
}

model Keeper{
  id                        String    @id @default(cuid())
  chain                     String    @default("ROOCH-testnet")
  module                    String 
  privateKey                String

  createdAt                 DateTime  @default(now())
  updateAt                  DateTime  @updatedAt

  @@unique([chain, module])

}